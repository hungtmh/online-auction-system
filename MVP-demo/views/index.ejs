    .product-card { 
      transition: transform 0.2s, box-shadow 0.2s; 
      height: 100%;
      border: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .product-card:hover { 
      transform: translateY(-5px); 
      box-shadow: 0 4px 20px rgba(0,0,0,0.15); 
    }
    .product-img {
      height: 200px;
      object-fit: cover;
      border-radius: 8px 8px 0 0;
    }
    .badge-new { 
      background: #ffd700; 
      color: #000; 
      animation: pulse 2s infinite; 
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 1;
    }
    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
    .price-current { color: #28a745; font-size: 1.2rem; font-weight: bold; }
    .section-title { 
      font-weight: 700; 
      margin-bottom: 30px; 
      padding-bottom: 10px; 
      border-bottom: 3px solid #667eea; 
    }
  </style>
</head>
<body>
