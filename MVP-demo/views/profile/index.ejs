<% 
  function formatPrice(price) {
    return parseFloat(price).toLocaleString('vi-VN') + ' VNĐ';
  }
  
  function getRatingPercent(positive, negative) {
    const total = positive + negative;
    if (total === 0) return { percent: 0, text: 'Chưa có đánh giá' };
    return { 
      percent: Math.round(positive / total * 100), 
      text: `${Math.round(positive / total * 100)}% (${positive}+ / ${negative}-)` 
    };
  }
%>

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
  <%- include('../partials/navbar', { categories: [] }) %>

  <% if (success && success.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <div class="container my-5">
    <h2 class="mb-4"><i class="bi bi-person-circle"></i> Hồ sơ cá nhân</h2>

    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body text-center">
            <i class="bi bi-person-circle display-1 text-primary"></i>
            <h4 class="mt-3"><%= user.full_name %></h4>
            <p class="text-muted"><%= user.email %></p>
            <% 
              const rating = getRatingPercent(user.rating_positive, user.rating_negative);
            %>
            <div class="mb-3">
              <% if (user.role === 'admin') { %>
                <span class="badge bg-danger fs-6">ADMIN</span>
              <% } else if (user.role === 'seller') { %>
                <span class="badge bg-success fs-6">SELLER</span>
              <% } else { %>
                <span class="badge bg-info fs-6">BIDDER</span>
              <% } %>
            </div>
            <div class="card bg-light">
              <div class="card-body">
                <h6>Đánh giá</h6>
                <% if (rating.percent > 0) { %>
                  <div class="progress mb-2" style="height: 25px;">
                    <div class="progress-bar bg-success" style="width: <%= rating.percent %>%">
                      <%= rating.percent %>%
                    </div>
                  </div>
                  <p class="small mb-0">
                    <i class="bi bi-hand-thumbs-up-fill text-success"></i> <%= user.rating_positive %> tích cực<br>
                    <i class="bi bi-hand-thumbs-down-fill text-danger"></i> <%= user.rating_negative %> tiêu cực
                  </p>
                <% } else { %>
                  <p class="text-muted mb-0">Chưa có đánh giá</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-8">
        <!-- Sản phẩm đang tham gia đấu giá -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-hammer"></i> Sản phẩm đang tham gia đấu giá (<%= myBids.length %>)</h5>
          </div>
          <div class="card-body">
            <% if (myBids.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Sản phẩm</th>
                      <th class="text-end">Giá tôi đặt</th>
                      <th class="text-end">Giá cao nhất</th>
                      <th>Trạng thái</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% myBids.forEach(bid => { %>
                      <tr>
                        <td><%= bid.title %></td>
                        <td class="text-end"><%= formatPrice(bid.my_bid) %></td>
                        <td class="text-end fw-bold <%= bid.my_bid >= bid.highest_bid ? 'text-success' : 'text-danger' %>">
                          <%= formatPrice(bid.highest_bid) %>
                        </td>
                        <td>
                          <% if (bid.my_bid >= bid.highest_bid) { %>
                            <span class="badge bg-success">Đang dẫn đầu</span>
                          <% } else { %>
                            <span class="badge bg-warning text-dark">Bị vượt</span>
                          <% } %>
                        </td>
                        <td>
                          <a href="/products/<%= bid.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i> Xem
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted text-center py-4">
                <i class="bi bi-inbox"></i><br>
                Bạn chưa tham gia đấu giá sản phẩm nào
              </p>
            <% } %>
          </div>
        </div>

        <!-- Sản phẩm đã thắng -->
        <div class="card">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-trophy"></i> Sản phẩm đã thắng (<%= myWins.length %>)</h5>
          </div>
          <div class="card-body">
            <% if (myWins.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Sản phẩm</th>
                      <th class="text-end">Giá thắng</th>
                      <th>Kết thúc lúc</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% myWins.forEach(win => { %>
                      <tr>
                        <td><%= win.title %></td>
                        <td class="text-end fw-bold text-success"><%= formatPrice(win.winning_bid) %></td>
                        <td><%= moment(win.end_time).format('DD/MM/YYYY HH:mm') %></td>
                        <td>
                          <a href="/products/<%= win.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye"></i> Xem
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted text-center py-4">
                <i class="bi bi-inbox"></i><br>
                Bạn chưa thắng sản phẩm nào
              </p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    setTimeout(() => {
      document.querySelectorAll('.alert').forEach(alert => {
        const bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
      });
    }, 5000);
  </script>
</body>
</html>
