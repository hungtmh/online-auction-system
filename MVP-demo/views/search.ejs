<% 
  function formatPrice(price) {
    return parseFloat(price).toLocaleString('vi-VN') + ' VNĐ';
  }
  
  function timeRemaining(endTime) {
    const now = moment();
    const end = moment(endTime);
    const duration = moment.duration(end.diff(now));
    
    if (duration.asMilliseconds() <= 0) return 'Đã kết thúc';
    
    const days = Math.floor(duration.asDays());
    const hours = duration.hours();
    const minutes = duration.minutes();
    
    if (days > 3) {
      return end.format('DD/MM/YYYY HH:mm');
    } else if (days > 0) {
      return `${days} ngày ${hours} giờ`;
    } else if (hours > 0) {
      return `${hours} giờ ${minutes} phút`;
    } else {
      return `${minutes} phút`;
    }
  }

  function isNew(createdAt) {
    const created = moment(createdAt);
    const now = moment();
    const minutesAgo = now.diff(created, 'minutes');
    return minutesAgo <= 60;
  }
%>

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    .product-card { 
      transition: transform 0.2s; 
      height: 100%;
    }
    .product-card:hover { 
      transform: translateY(-5px); 
      box-shadow: 0 4px 15px rgba(0,0,0,0.15); 
    }
    .product-img {
      height: 200px;
      object-fit: cover;
    }
    .badge-new { 
      background: #ffd700; 
      color: #000; 
      animation: pulse 2s infinite;
      position: absolute;
      top: 10px;
      left: 10px;
      z-index: 1;
    }
    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { categories }) %>

  <div class="container my-5">
    <!-- Search Filter -->
    <div class="card mb-4">
      <div class="card-body">
        <form action="/search" method="GET" class="row g-3">
          <div class="col-md-5">
            <label class="form-label">Tìm kiếm</label>
            <input type="text" name="q" class="form-control" placeholder="Nhập tên sản phẩm..." value="<%= query %>">
          </div>
          <div class="col-md-3">
            <label class="form-label">Danh mục</label>
            <select name="category" class="form-select">
              <option value="">Tất cả danh mục</option>
              <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>" <%= selectedCategory == cat.id ? 'selected' : '' %>>
                  <%= cat.name %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="col-md-2">
            <label class="form-label">Sắp xếp</label>
            <select name="sort" class="form-select">
              <option value="" <%= currentSort === '' ? 'selected' : '' %>>Mới nhất</option>
              <option value="ending_soon" <%= currentSort === 'ending_soon' ? 'selected' : '' %>>Sắp kết thúc</option>
              <option value="price_asc" <%= currentSort === 'price_asc' ? 'selected' : '' %>>Giá tăng dần</option>
            </select>
          </div>
          <div class="col-md-2">
            <label class="form-label">&nbsp;</label>
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-search"></i> Tìm kiếm
            </button>
          </div>
        </form>
      </div>
    </div>

    <% if (products.length > 0) { %>
      <div class="row mb-3">
        <div class="col">
          <h4>Kết quả tìm kiếm</h4>
          <p class="text-muted">
            <% if (query) { %>
              Tìm thấy sản phẩm cho "<strong><%= query %></strong>"
            <% } else { %>
              Hiển thị tất cả sản phẩm
            <% } %>
          </p>
        </div>
        <div class="col-auto">
          <p class="text-muted">Trang <%= currentPage %> / <%= totalPages %></p>
        </div>
      </div>

      <div class="row g-4">
        <% products.forEach(product => { %>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card product-card">
              <% if (isNew(product.created_at)) { %>
                <span class="badge badge-new"><i class="bi bi-star-fill"></i> MỚI</span>
              <% } %>
              <img src="<%= product.image_url %>" class="product-img card-img-top" alt="<%= product.title %>">
              <div class="card-body">
                <h6 class="card-title text-truncate" title="<%= product.title %>"><%= product.title %></h6>
                <p class="text-success fw-bold mb-1"><%= formatPrice(product.current_price) %></p>
                <p class="small text-muted mb-2">
                  <i class="bi bi-person"></i> <%= product.highest_bidder || 'Chưa có' %>
                </p>
                <p class="small mb-2">
                  <span class="badge bg-danger">
                    <i class="bi bi-clock"></i> <%= timeRemaining(product.end_time) %>
                  </span>
                  <span class="badge bg-info">
                    <i class="bi bi-hammer"></i> <%= product.bid_count %> lượt
                  </span>
                </p>
              </div>
              <div class="card-footer bg-transparent">
                <a href="/products/<%= product.id %>" class="btn btn-primary btn-sm w-100">
                  <i class="bi bi-eye"></i> Xem chi tiết
                </a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
        <nav class="mt-5">
          <ul class="pagination justify-content-center">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a class="page-link" href="?q=<%= query %>&category=<%= selectedCategory %>&sort=<%= currentSort %>&page=<%= currentPage - 1 %>">
                <i class="bi bi-chevron-left"></i>
              </a>
            </li>
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?q=<%= query %>&category=<%= selectedCategory %>&sort=<%= currentSort %>&page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
              <a class="page-link" href="?q=<%= query %>&category=<%= selectedCategory %>&sort=<%= currentSort %>&page=<%= currentPage + 1 %>">
                <i class="bi bi-chevron-right"></i>
              </a>
            </li>
          </ul>
        </nav>
      <% } %>
    <% } else { %>
      <div class="alert alert-info text-center py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
        <h4 class="mt-3">Không tìm thấy sản phẩm nào</h4>
        <p class="text-muted">Thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
        <a href="/search" class="btn btn-primary">Xem tất cả sản phẩm</a>
      </div>
    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
