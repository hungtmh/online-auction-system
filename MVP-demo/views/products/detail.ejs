<% 
  function formatPrice(price) {
    return parseFloat(price).toLocaleString('vi-VN') + ' VNĐ';
  }
  
  function timeRemaining(endTime) {
    const now = moment();
    const end = moment(endTime);
    const duration = moment.duration(end.diff(now));
    
    if (duration.asMilliseconds() <= 0) return 'Đã kết thúc';
    
    const days = Math.floor(duration.asDays());
    const hours = duration.hours();
    const minutes = duration.minutes();
    
    if (days > 3) {
      return end.format('DD/MM/YYYY HH:mm');
    } else if (days > 0) {
      return `${days} ngày ${hours} giờ`;
    } else if (hours > 0) {
      return `${hours} giờ ${minutes} phút`;
    } else {
      return `${minutes} phút`;
    }
  }

  function getRatingPercent(positive, negative) {
    const total = positive + negative;
    if (total === 0) return 'Chưa có đánh giá';
    return `${Math.round(positive / total * 100)}% (${positive}+ / ${negative}-)`;
  }
%>

<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    .product-image { width: 100%; max-height: 500px; object-fit: contain; border-radius: 10px; }
    .price-display { font-size: 2rem; color: #28a745; font-weight: bold; }
    .bid-form { background: #f8f9fa; padding: 20px; border-radius: 10px; border: 2px solid #007bff; }
    .bid-history { max-height: 400px; overflow-y: auto; }
  </style>
</head>
<body>
  <%- include('../partials/navbar', { categories: [] }) %>

  <% if (success && success.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="container mt-3">
      <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  <% } %>

  <div class="container my-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/products/category/<%= product.category_id %>"><%= product.category_name %></a></li>
        <li class="breadcrumb-item active"><%= product.title %></li>
      </ol>
    </nav>

    <div class="row">
      <!-- Product Images & Info -->
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <img src="<%= product.image_url %>" alt="<%= product.title %>" class="product-image mb-3">
            
            <h2 class="mb-3"><%= product.title %></h2>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <p class="mb-1"><strong>Danh mục:</strong> <span class="badge bg-secondary"><%= product.category_name %></span></p>
                <p class="mb-1"><strong>Người bán:</strong> <%= product.seller_name %> 
                  <small class="text-muted">(<%= getRatingPercent(product.seller_positive, product.seller_negative) %>)</small>
                </p>
                <p class="mb-1"><strong>Đăng lúc:</strong> <%= moment(product.created_at).format('DD/MM/YYYY HH:mm') %></p>
              </div>
              <div class="col-md-6">
                <p class="mb-1"><strong>Kết thúc:</strong> 
                  <span class="badge bg-danger"><%= timeRemaining(product.end_time) %></span>
                </p>
                <p class="mb-1"><strong>Số lượt đấu giá:</strong> 
                  <span class="badge bg-info"><%= product.bid_count %> lượt</span>
                </p>
                <% if (highestBid) { %>
                  <p class="mb-1"><strong>Người đấu giá cao nhất:</strong> <%= highestBid.full_name %>
                    <small class="text-muted">(<%= getRatingPercent(highestBid.rating_positive, highestBid.rating_negative) %>)</small>
                  </p>
                <% } %>
              </div>
            </div>

            <hr>
            
            <h5>Mô tả sản phẩm</h5>
            <p><%= product.description || 'Không có mô tả chi tiết' %></p>
          </div>
        </div>

        <!-- Bid History -->
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Lịch sử đấu giá</h5>
          </div>
          <div class="card-body bid-history">
            <% if (bidHistory.length > 0) { %>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Thời điểm</th>
                    <th>Người mua</th>
                    <th class="text-end">Giá</th>
                  </tr>
                </thead>
                <tbody>
                  <% bidHistory.forEach(bid => { %>
                    <tr>
                      <td><%= moment(bid.created_at).format('DD/MM/YYYY HH:mm') %></td>
                      <td><%= bid.masked_name %></td>
                      <td class="text-end fw-bold text-success"><%= formatPrice(bid.bid_amount) %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            <% } else { %>
              <p class="text-muted text-center">Chưa có lượt đấu giá nào</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Bid Form Sidebar -->
      <div class="col-lg-4">
        <div class="card sticky-top" style="top: 20px;">
          <div class="card-body">
            <h5 class="text-center mb-3">Giá hiện tại</h5>
            <p class="price-display text-center mb-3"><%= formatPrice(product.current_price) %></p>
            
            <% if (product.buy_now_price) { %>
              <p class="text-center text-muted mb-3">
                Giá mua ngay: <strong class="text-danger"><%= formatPrice(product.buy_now_price) %></strong>
              </p>
            <% } %>

            <hr>

            <% if (user) { %>
              <% if (user.id !== product.seller_id) { %>
                <form action="/bids" method="POST" class="bid-form">
                  <input type="hidden" name="product_id" value="<%= product.id %>">
                  
                  <div class="mb-3">
                    <label class="form-label">Giá đề nghị</label>
                    <div class="input-group">
                      <input type="number" name="bid_amount" class="form-control form-control-lg" 
                             min="<%= suggestedBid %>" 
                             value="<%= suggestedBid %>" 
                             step="<%= product.price_step %>" 
                             required>
                      <span class="input-group-text">VNĐ</span>
                    </div>
                    <small class="text-muted">
                      Giá tối thiểu: <%= formatPrice(suggestedBid) %><br>
                      Bước giá: <%= formatPrice(product.price_step) %>
                    </small>
                  </div>

                  <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-hammer"></i> Đặt giá ngay
                  </button>
                </form>
              <% } else { %>
                <div class="alert alert-warning">
                  <i class="bi bi-info-circle"></i> Đây là sản phẩm của bạn
                </div>
              <% } %>
            <% } else { %>
              <div class="alert alert-info">
                <p class="mb-2"><i class="bi bi-info-circle"></i> Vui lòng đăng nhập để đấu giá</p>
                <a href="/auth/login" class="btn btn-primary w-100">
                  <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Products -->
    <% if (relatedProducts.length > 0) { %>
      <div class="mt-5">
        <h4 class="mb-4"><i class="bi bi-grid"></i> Sản phẩm cùng danh mục</h4>
        <div class="row g-3">
          <% relatedProducts.forEach(p => { %>
            <div class="col-md-6 col-lg-3">
              <div class="card h-100">
                <img src="<%= p.image_url %>" class="card-img-top" style="height: 150px; object-fit: cover;">
                <div class="card-body">
                  <h6 class="card-title text-truncate"><%= p.title %></h6>
                  <p class="text-success fw-bold mb-1"><%= formatPrice(p.current_price) %></p>
                  <p class="small text-muted mb-2">
                    <i class="bi bi-hammer"></i> <%= p.bid_count %> lượt
                  </p>
                  <a href="/products/<%= p.id %>" class="btn btn-outline-primary btn-sm w-100">Xem chi tiết</a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    setTimeout(() => {
      document.querySelectorAll('.alert').forEach(alert => {
        const bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
      });
    }, 5000);
  </script>
</body>
</html>
